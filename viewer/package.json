{
  "name": "viewer",
  "description": "viewer",
  "version": "0.3.0",
  "repository": ".",
  "dependencies": {
    "autosize": "^3.0.20",
    "babel-cli": "6.7.5",
    "babel-core": "^6.10.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-runtime": "^6.9.2",
    "babelify": "7.2.0",
    "bower-installer": "~1.2.0",
    "browserify": "13.0.0",
    "browserify-hmr": "^0.3.1",
    "browserify-shim": "^3.8.0",
    "combokeys": "^2.4.6",
    "gulp": "^3.9.1",
    "gulp-sourcemaps": "^1.6.0",
    "less": "~2.3.1",
    "lodash": "~4.16.4",
    "marked": "^0.3.6",
    "modernizr": "^3.5.0",
    "moment": "^2.14.1",
    "parallelshell": "~1.0.4",
    "uglify-js": "~2.4.16",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "vue": "^1.0.21",
    "vue-clickaway": "1.2.0",
    "vueify": "^8.5.4",
    "vuex": "^1.0.0-rc.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-html": "^1.7.0",
    "gulp-markdown-to-json": "^1.0.3",
    "karma": "^1.2.0",
    "karma-browserify": "^5.0.5",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.0.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-simple-browserify-preprocessor": "0.0.2",
    "mocha": "^2.5.3",
    "phantomjs-prebuilt": "^2.1.7",
    "proxyquireify": "^3.2.0",
    "watch": "~0.13.0",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "scripts": {
    "modernizr": "modernizr -c modernizr-config.json -d static/vendor/modernizr/js/ -u",
    "generatehelp": "gulp markdown",
    "postinstall": "mkdir -p static/build && npm run vendor && npm run app",
    "vendor": "npm run vendor:fetch && npm run modernizr && parallelshell 'npm run vendor:js'",
    "vendor:fetch": "bower-installer",
    "vendor:js": "uglifyjs static/vendor/{jquery,bootstrap,modernizr}/js/*.js -o static/build/vendor.min.js --source-map static/build/vendor.min.js.map --source-map-url ./vendor.min.js.map --source-map-root /",
    "app": "parallelshell 'npm run generatehelp' 'npm run app:js' 'npm run app:id:less' 'npm run app:libris:less'",
    "app:eslint": "eslint 'static/js/**/*.es6' 'static/js/**/*.vue' || true",
    "app:js": "parallelshell 'npm run app:transpile'",
    "app:transpile": "browserify static/js/es6/app.es6 -t babelify -o static/build/app.js --extension=.js --extension=.json --extension=.es6 --extension=.vue",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:libris:less' 'npm run watch:id:less'",
    "watch:js": "parallelshell gulp",
    "watch:id:less": "watch 'npm run app:id:less' static/less/",
    "watch:libris:less": "watch 'npm run app:libris:less' static/less/",
    "app:id:less": "lessc static/less/main_id.less static/build/id.css --source-map=static/build/id.css.map",
    "app:libris:less": "lessc static/less/main_libris.less static/build/libris.css --source-map=static/build/libris.css.map",
    "test:e2e": "cd test && cd e2e && nightwatch --test specs/viewer.js",
    "test:e2e:chrome": "cd test && cd e2e && nightwatch --test specs/viewer.js -e chrome",
    "test:unit": "./node_modules/karma/bin/karma start karma.conf.js --single-run --browsers PhantomJS"
  }
}
