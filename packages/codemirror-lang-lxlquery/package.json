{
	"name": "codemirror-lang-lxlquery",
	"version": "0.1.0",
	"description": "Libris XL query language support for CodeMirror",
	"scripts": {
		"test": "vitest",
		"prepare": "rollup -c --bundleConfigAsCjs --configImportAttributesKey with",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"watch": "rollup -c --watch --bundleConfigAsCjs --configImportAttributesKey with"
	},
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"exports": {
		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"types": "dist/index.d.ts",
	"sideEffects": false,
	"dependencies": {
		"@codemirror/language": "^6.11.2",
		"@lezer/highlight": "^1.0.0",
		"@lezer/lr": "^1.0.0"
	},
	"devDependencies": {
		"@lezer/generator": "^1.8.0",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"rollup": "^4.46.2",
		"rollup-plugin-dts": "^6.2.1",
		"rollup-plugin-ts": "^3.0.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.1",
		"vitest": "^3.2.4"
	},
	"license": "MIT"
}
