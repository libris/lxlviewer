{
	"name": "codemirror-lang-lxlquery",
	"version": "0.1.0",
	"description": "Libris XL query language support for CodeMirror",
	"scripts": {
		"test": "vitest",
		"prepare": "rollup -c",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"watch": "rollup -c --watch"
	},
	"type": "module",
	"main": "dist/index.cjs",
